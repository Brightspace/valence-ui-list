{
  "name": "vui-list",
  "version": "0.3.0",
  "description": "Mixins and CSS for applying list styles",
  "scripts": {
    "clean": "rimraf *.css",
    "prebuild": "npm run clean",
    "build": "npm run build:sass:css && npm run build:less:css",
    "build:less:css": "lessc list.css.less > list-less.css",
    "postbuild:less:css": "csslint list-less.css",
    "build:sass:css": "node-sass --output-style expanded list.css.scss list.css",
    "postbuild:sass:css": "csslint list.css",
    "pretest": "npm run build",
    "test": "karma start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-list.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "list"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-list/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-list",
  "devDependencies": {
    "csslint": "^0.10.0",
    "jasmine-dom-matchers": "^0.1.0",
    "karma": "^0.12.32",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-cli": "0.0.4",
    "less": "^2.5.1",
    "node-sass": "^3.1.1",
    "rimraf": "^2.3.4"
  }
}
