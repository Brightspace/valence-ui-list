{
  "name": "vui-list",
  "version": "1.0.0",
  "description": "Mixins and CSS for applying list styles",
  "scripts": {
    "autoprefix": "postcss -c postcss.config.json",
    "autoprefix:test": "postcss -c ./test/postcss.config.json",
    "clean": "rimraf *.css && rimraf ./test/*.css",
    "prebuild": "npm run clean",
    "build": "npm run build:sass && npm run build:sass:test",
    "build:sass": "node-sass --output-style expanded list.css.scss list.css",
    "build:sass:test": "node-sass --output-style expanded ./test/test.scss ./test/test.css",
    "postbuild:sass:test": "npm run autoprefix:test",
    "postbuild:sass": "npm run autoprefix",
    "postinstall": "bower install",
    "pretest": "npm run build",
    "test": "csslint list.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-list.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui",
    "list"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-list/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-list",
  "dependencies": {
    "bower": "^1.7.7"
  },
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "csslint": "^0.10.0",
    "node-sass": "^3.4.2",
    "phantomjs-prebuilt": "^2.1.4",
	"postcss-cli": "^2.3.2",
    "rimraf": "^2.5.2"
  }
}
